<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary nav-bg-color ">
        <div class="d-flex px-3 col-lg-12 m-1">
            @Html.ActionLink("Rent A Car", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="active">@Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("New Rental", "Index", "Rentals", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Cars", "Index", "Cars", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div class="align-items-end">
                <form class="d-flex ">
                    <div class="input-group mx-1">
                        <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="Search">
                    </div>
                    <div >

                        <button type="submit" class="btn btn-bg">Search</button>
                    </div>
                    <div class="mx-1">

                        <button type="submit" class="btn btn-default text-white">Register</button>
                    </div>
                    <div>

                        <button type="submit" class="btn btn-default text-white">Log&nbsp;in</button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
