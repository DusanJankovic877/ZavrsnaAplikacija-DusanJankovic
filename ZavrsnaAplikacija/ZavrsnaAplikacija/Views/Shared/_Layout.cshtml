/*    .nav-bg-color {
        background-color: #1b9e6e !important;
    }*/
    .images-div {
        background-color: #d1d1d1 !important;
    }
    .text-green {
        color: #1b9e6e !important;
    }
    .btn-bg{
        background-color: gray;
    }
</style>
    
